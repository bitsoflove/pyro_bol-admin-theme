<!doctype html>
<html>
    <head>
        {% block metadata deferred %}
        {% include "theme::partials/metadata" %}
        {% endblock %}
    </head>

    <body class="pushing">
        <main id="main">
            <div id="sidebar">
                {% include "theme::partials/brand" %}
                {% include "theme::partials/sidebar" %}
            </div>
            <div id="content">
                {% include "theme::partials/navbar" %}
                {% include "theme::partials/header" %}

                {% include "pyrocms.theme.pyrocms::partials/banner" %}
                {% include "pyrocms.theme.pyrocms::partials/breadcrumbs" %}
                <div class="container-fluid">
                    {% include "pyrocms.theme.pyrocms::partials/messages" %}
                </div>
                {{ block('content') }}
            </div>
            {% include "theme::partials/footer" %}
        </main>

        {% include "pyrocms.theme.pyrocms::partials/modals" %}
        {% include "pyrocms.theme.pyrocms::partials/js" %}
    </body>
</html>
